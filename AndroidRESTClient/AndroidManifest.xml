<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rest.usuario.android"
    android:versionCode="1"
    android:versionName="1.0" >
    
 <!-- Desde esta aplicación necesita comunicarse a través de Internet,
  hay que dar a la aplicación de los permisos adecuados. -->
  
    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET" /> 
     
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.rest.usuario.android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="AndroidRESTPeopleActivity"></activity>
        <activity android:name="AndroidRESTPersonActivity"></activity>
        
    </application>
 
</manifest>